<Window x:Class="PrintSelected.AddEditNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintSelected"
        mc:Ignorable="d"
        Title="AddEditNote" Height="280" Width="800" ResizeMode="CanResizeWithGrip">
    <StackPanel  Height="Auto"  Width="Auto">
        <TextBox x:Name="NoteTxbox" TextWrapping="Wrap" MinWidth="600" MinHeight="200" Margin="10,10,10,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Height="20">
            <Button Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Background="#FF04CF04" Foreground="White" Click="Button_Click_Save">Сохранить</Button>
            <Button Width="100" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#FFFB1B05" Foreground="White" IsCancel="True">Отмена</Button>
        </StackPanel>

    </StackPanel>

</Window>
